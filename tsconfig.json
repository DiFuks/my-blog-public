{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": true,
      "jsx": "react",
      "sourceMap": true,
      "experimentalDecorators": true,
      "types": ["node"],
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "esModuleInterop": false,
      "paths": {
        "@app/*": ["src/app/*"],
        "@translations/*": ["src/translations/*"],
        "@assets/*": ["src/assets/*"]
      },
      "typeRoots": ["./src/typings"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
